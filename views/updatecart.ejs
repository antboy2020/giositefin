    <script>
        function goBack() {
            window.history.back();
        }


        function updateCart(count, itemName) {
            let xhr = new XMLHttpRequest();
            let url = "/updateCart/" + itemName + "/" + count.value;
            xhr.open("POST", url);
            xhr.send();
        }
    </script>

