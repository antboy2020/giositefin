            <td>Shipping</td>
        <td><%= shipping%></td>
    </tr>
            <tr>
                    <td></td>
                    <td></td>
                    <td>Total</td>
                <td><%= total + tax + shipping%></td>
            </tr>
        </tbody>
        <%}%>
