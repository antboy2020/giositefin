<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body id="homePage">
  <%- include('partials/nav') %>
  <a href="/"><img src="../img/legeit-transparent.png" class="legeit" /></a>
  <br />
  <% if(data.showModal) {%>
  <script>
    $(document).ready(function () {
      $("#myModal").modal();
    });
  </script>
  <% } %>
  <!-- Modal -->
  <div id="myModal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">
            LÃ© Geit Studio
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Thank you for your purchase. We will notify you as soon as your item
          has shipped.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <% var slideImages = [{image: "../img/homecarousel1.jpeg", href: "booking"}, {image: "../img/homecarousel2.jpeg", href: "booking"}, {image: "../img/homecarousel3.jpeg", href: "booking"}, {image: "../img/homecarousel4.jpeg", href: "booking"}]; %>
  <%- include('partials/carousel', {slideImages: slideImages, carouselId: "indexCarousel"}) %>

  <!-- photos -->
  <% if(data.authenticated) {%>
  <%- include('partials/uploadForm') %>
  <hr />
  <%} else { %>
  <br />
  <%}%> <% if(files){ %>
  <h4 style="text-align: center; margin-top: 10px;">Featured Items</h4>
  <hr style="width: 50%; margin-top: 0px;" />
  <br />
  <div class="container">
    <div class="row">
      <% files.forEach(function(file) { %>
      <div class="col-md-3 col-sm-6 portfolio-item">
        <a href="/product/<%= file.filename %>">
          <img class="img-fluid image-resize mb-1" src="image/<%= file.filename %>" alt="" />
        </a>
        <div class="portfolio-caption">
          <h4 class="homePageItemTitleFonts"><%= file.filename %></h4>
          <div class="row">
            <div class="col">
              <p>$ <%= file.price %></p>
            </div>
          </div>
        </div>
        <% if(data.authenticated){ %>
        <form method="POST" action="/images/<%= file.filename %>?_method=DELETE">
          <button class="btn btn-danger btn-block mt-4 mb-3 button-width">
            Delete
          </button>
        </form>
        <% } %>
      </div>
      <% }) %>
    </div>
  </div>
  <% } else { %>
  <p>No files to show</p>
  <% } %>
  <br />
  <hr style="width: 50%; margin-top: 0px;" />

  <%- include('partials/footer') %>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>