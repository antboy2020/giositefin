<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

<body id="homePage">
  <%- include('partials/nav') %>
  <a href="/"><img src="../img/legeit-transparent.png" class="legeit" /></a>
  <br />
  <% if(data.showModal) {%>
  <script>
    $(document).ready(function () {
      $("#myModal").modal();
    });
  </script>
  <% } %>
  <!-- Modal -->
  <div id="myModal" class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">
            LÃ© Geit Studio
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Thank you for your purchase. We will notify you as soon as your item
          has shipped.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2500">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="../img/homecarousel1.jpeg" alt="First slide" />
        <div class="carousel-caption d-s-block text-center" id="carousel-button">
          <a class="btn btn-outline-light mr-4" href="booking">Book
            Now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="../img/homecarousel2.jpeg" alt="Second slide" />
        <div class="carousel-caption d-s-block text-center" id="carousel-button">
          <a class="btn btn-outline-light mr-4" href="booking">Book
            Now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="../img/homecarousel3.jpeg" alt="Third slide" />
        <div class="carousel-caption d-s-block text-center" id="carousel-button">
          <a class="btn btn-outline-light mr-4" href="booking">Book
            Now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="../img/homecarousel4.jpeg" alt="Third slide" />
        <div class="carousel-caption d-s-block text-center" id="carousel-button">
          <a class="btn btn-outline-light mr-4"
            href="https://booksy.com/en-us/instant-experiences/widget/38311?instant_experiences_enabled=true&ig_ix=true">Book
            Now</a>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <script>
    !(function (d) {
      // All code will go in here. We've renamed 'document' to 'd'.
      var ptoggle = document.getElementById("carouselExampleIndicators");
      function toggleSlide(x) {
        if (x.matches) { // If media query matches
          ptoggle.classList.toggle("slide");
        } else {
          ptoggle.classList.toggle("slide");
        }
      }
      var x = window.matchMedia("(max-width: 700px)");
      toggleSlide(x); // Call listener function at run time
      x.addListener(toggleSlide); // Attach listener function on state 
    }(document));
  </script>

  <!-- photos -->
  <% if(data.authenticated) {%>
  <%- include('partials/uploadForm') %>
  <hr />
  <%} else { %>
  <br />
  <%}%> <% if(files){ %>
  <h4 style="text-align: center; margin-top: 10px;">Featured Items</h4>
  <hr style="width: 50%; margin-top: 0px;" />
  <br />
  <div class="container">
    <div class="row">
      <% files.forEach(function(file) { %>
      <div class="col-md-3 col-sm-6 portfolio-item">
        <a href="/product/<%= file.filename %>">
          <img class="img-fluid image-resize mb-1" src="image/<%= file.filename %>" alt="" />
        </a>
        <div class="portfolio-caption">
          <h4 class="homePageItemTitleFonts"><%= file.filename %></h4>
          <div class="row">
            <div class="col">
              <p>$ <%= file.price %></p>
            </div>
          </div>
        </div>
        <% if(data.authenticated){ %>
        <form method="POST" action="/images/<%= file.filename %>?_method=DELETE">
          <button class="btn btn-danger btn-block mt-4 mb-3 button-width">
            Delete
          </button>
        </form>
        <% } %>
      </div>
      <% }) %>
    </div>
  </div>
  <% } else { %>
  <p>No files to show</p>
  <% } %>
  <br />
  <hr style="width: 50%; margin-top: 0px;" />

