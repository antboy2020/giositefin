<div id="<%= carouselId %>" class="carousel slide carouselSizing" data-ride="carousel" data-interval="2500">
    <div class="carousel-inner">
        <% for(let i = 0; i<slideImages.length; i++){ %>
        <% if(i == 0) {%>
        <div class="carousel-item active">
            <% } %>
            <% if(i != 0) {%>
            <div class="carousel-item">
                <% } %>
                <img class="d-block w-100" src="<%= slideImages[i].image %>" alt="First slide" />
                <div class="carousel-caption d-s-block text-center" id="carousel-button">
                    <a class="btn btn-outline-light mr-4" href="<%= slideImages[i].href %>">Book
                        Now</a>
                </div>
            </div>
            <% } %>
        </div>
        <a class="carousel-control-prev" href="#<%= carouselId %>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#<%= carouselId %>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <script>
        !(function (d) {
            // All code will go in here. We've renamed 'document' to 'd'.
            var ptoggle = document.getElementById("<%= carouselId %>");
            function toggleSlide() {
                ptoggle.classList.toggle("slide");
            }
            toggleSlide(); // Call listener function at run time
        }(document));
    </script>